---
import * as classes from "./styles.css";

export interface Props {
  active: boolean;
  href: string;
  name: string;
}
const { active, href, name } = Astro.props;
---

<a href={href} class={classes.root}>
  <div class={`${classes.container}${active ? " " + classes.active : ""}`}>
    <svg
      width="16"
      height="16"
      viewBox="0 0 16 16"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <rect x="1" y="1" width="14" height="14" stroke="#E8E8F2" stroke-width="2"
      ></rect>
    </svg>
    <span>{name}</span>
  </div>
</a>
